{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Cache": "redis-service-dev.redis.svc.cluster.local:6379"
  },
  "ProviderUrls": {
    "FrankfurterBaseUrl": "https://api.frankfurter.dev/"
  },
  "Authentication": {
    "Issuer": "https://dev.currencyconverter.io/api/auth",
    "Audience": "users",
    "JwtSecret": "${JwtSecret}"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://seq-service.seq-dev.svc.cluster.local:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "CurrencyConverter.Api"
    }
  }
}
